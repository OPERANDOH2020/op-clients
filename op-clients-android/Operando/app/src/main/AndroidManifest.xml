<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="eu.operando">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoginActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".activity.SignUpActivity"/>
        <activity android:name=".activity.MainActivity"/>
        <activity android:name=".activity.ScannerActivity"/>
        <activity android:name=".activity.IdentitiesActivity"/>
        <activity android:name=".activity.CreateIdentityActivity"/>
        <activity android:name=".activity.BrowserActivity"/>
        <activity android:name=".activity.PFBActivity"/>
        <activity android:name=".activity.NotificationsActivity"/>
        <activity android:name=".activity.PermissionsActivity"/>
    </application>

</manifest>