<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        style="@style/ToolBarStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="?attr/actionBarSize"></android.support.v7.widget.Toolbar>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <FrameLayout
            android:id="@+id/main_fragment_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_alignParentBottom="true"
            android:orientation="vertical">
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/blackTitle"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/registerOrLoginRL"
                android:layout_height="50dp" android:background="@color/lightOrange" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    style="@style/LoginPageTextView"
                    android:gravity="center_horizontal" android:text="@string/registerOrLogin"/>
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp" android:background="@color/blackTitle"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:id="@+id/aboutRL"
                android:layout_height="50dp" android:background="@color/lightOrange" >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    style="@style/LoginPageTextView"
                    android:gravity="center_horizontal" android:text="@string/aboutOperando"/>
            </RelativeLayout>


        </LinearLayout>


    </RelativeLayout>

</LinearLayout>