[default]
inherit = metadata.common

[general]
basename = adblockpluschrome
permissions = tabs
  activeTab
  http://*/*
  https://*/*
  contextMenus
  webRequest
  webRequestBlocking
  webNavigation
  storage
  unlimitedStorage
  notifications
  contentSettings
  cookies
options = /operando/operando.html
browserAction = operando/icons/operando/abp-19.png operando/icons/operando/abp-38.png popup.html
icons = operando/icons/operando/abp-16.png operando/icons/operando/abp-32.png operando/icons/operando/detailed/abp-48.png
  operando/icons/operando/detailed/abp-64.png operando/icons/operando/detailed/abp-128.png
webAccessible = block.html
managedStorageSchema = managed-storage-schema.json

[compat]
chrome = 28.0

[mapping]
icons/abp-19.png = operando/icons/abp-19.png
icons/abp-19-whitelisted.png = operando/icons/abp-19-whitelisted.png
icons/abp-19-notification-critical.png = operando/icons/abp-19-notification-critical.png
icons/abp-19-notification-information.png = operando/icons/abp-19-notification-information.png
icons/abp-38.png = operando/icons/abp-38.png
icons/abp-38-whitelisted.png = operando/icons/abp-38-whitelisted.png
icons/abp-38-notification-critical.png = operando/icons/abp-38-notification-critical.png
icons/abp-38-notification-information.png = operando/icons/abp-38-notification-information.png
icons/detailed/abp-48.png = operando/icons/detailed/abp-48.png
managed-storage-schema.json = chrome/managed-storage-schema.json